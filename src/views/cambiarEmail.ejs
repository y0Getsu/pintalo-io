<!DOCTYPE html>
<html>
<head>

	<%- include('layouts/headerTag.ejs') %>
 	<link rel="stylesheet" type="text/css" href="/css/profile.css">
  	<style>.homes, .manuals, .logouts{ color: #fff; } .profiles{color: #D40D12;} .profiles span{margin: auto; width: 100%; border-bottom: 3px solid #D40D12;padding-bottom: 15px;}</style>
</head>
<body>
 	<header>
 		<%- include('layouts/header.ejs') %>
 	</header>
	 <main>
	 	<div class="content">
		 	<h1>CAMBIAR EMAIL</h1><br>
		 	<div class="contenedorNombreUsuario hidden">
		 		<form action="/profile/<%= user.username %>/edit/edit-email" method="POST">
		 			<input type="email" name="email" placeholder="Introduce tu nuevo email" id="email" required>
		 			<input class="enviar" type="submit" value="Guardar" id="enviarEmail">
		 		</form>
		 		<% if(errorMessage) { %>
						<%- errorMessage %>	
				<% } %>

		 		<% if(successMessage) { %>
						<%- successMessage %>	
				<% } %>
			</div>		 	
		</div>
	</main>

 	<footer>
 		<%- include('layouts/footer.ejs') %>
 	</footer>

 	<script type="text/javascript" src="/js/editProfileValidations.js"></script>
</body>
</html>